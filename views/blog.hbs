<div class="row">
  <section class="main col-md-9">
    {{#if data.post}}
    <article>
      <h2>{{data.post.title}}</h2>
      <br />
      {{#if data.post.image}}
      <img src={{data.post.image}} alt="feature Image" id="food-photo" />
      {{else}}
      <img src="https://upload.wikimedia.org/wikipedia/commons/6/65/No-Image-Placeholder.svg" alt="no Image"
        style="width:60%" />
      {{/if}}

      <br />
      <div class="main-text">
        <h3>Ingredients:</h3>
        {{#each data.post.ingredients}}
        <ul>{{this}}</ul>
        {{/each}}
      </div>
      <hr />

      <div class="main-text">
        <h3>Cooking Instructions:</h3>
        {{#each data.post.body}}
        <p>{{this}}</p>
        {{/each}}
      </div>

      <hr />

      <h3>Video Instruction:</h3>
      {{#if data.post.video}}
      <div>
        <iframe id="video-embed" width="560" height="315" src={{data.post.embeddedVideo}} title="YouTube video player"
          frameborder="0"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
          allowfullscreen>
        </iframe>
      </div>
      {{else}}
      <br />
      <p>This recipe has no relevant video available</p>
      {{/if}}

      <br />
      <hr />
      <strong>Category:</strong>
      {{data.post.category}}<br />
      <strong>Last Updated:</strong>
      {{#formatDate data.post.postDate}}{{/formatDate}}
    </article>
    {{/if}}

    {{#unless data.post}}
    <article>
      <div class="col-md-12 text-center">
        <h2>{{data.message}}</h2>
        <h4>No Information available</h4>
        <p>Please try another Recipe / Category</p>
      </div>
    </article>
    {{/unless}}
  </section>

  <aside class="col-md-3">
    <br /><br />
    {{#if data.posts}}
    <h4>Recipes</h4>
    {{#each data.posts}}
    <ul class="list-group">
      <a href="/blog/{{id}}" class="list-group-item">{{title}}</a>
    </ul>
    {{/each}}
    {{/if}}

    {{#if data.categories}}
    <h4>Categories</h4>
    {{#each data.categories}}
    <ul class="list-group">
      <a href="/blog?category={{this}}" class="list-group-item">{{this}}</a>
    </ul>
    {{/each}}
    {{/if}}

  </aside>
</div>